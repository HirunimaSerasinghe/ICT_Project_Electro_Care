<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header.ejs') %>

    <body>
        
        <!--side nav-->
       
        <!--content-->
        <div class="container-fluid">
            <h3 class="mt-3">Customer Details</h3>
            <a href="/admin/customers">All</a>
            <a href="/admin/customers/unregistered">Unregistered</a>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Account No.</th>
                        <th>Name</th>
                        <th>Mobile No.</th>
                        <th>Current Reading</th>
                        <th>Balance</th>
                        <th>Account Status</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    <% if(typeof customersData !='undefined' && customersData.length!=0){ var i=1; customersData.forEach(function(data){ %>
                        <tr> 
                            <td>
                                <%=data.account_no %>
                            </td>
                            <td>
                                <%=data.name %>
                            </td>
                            <td>
                                <%=data.mobile_no %>
                            </td>
                            <td>
                                <%=data.current_reading %>
                            </td>
                            <td>
                                <%=data.balance %>
                            </td>
                            <td>
                                status
                            </td>
                            <td class="text-center">
                                <button class="btn btn-light btn-sm" type="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/admin/viewcustomer/<%=data.account_no%>"  >View</a></li>
                                    <li><a class="dropdown-item" href="/admin/customers/edit/<%=data.account_no%>">Edit</a></li>
                                    <li><a class="dropdown-item" href="/admin/customers/delete/<%=data.account_no%>">Delete</a></li>
                                </ul>
                            </td>
                        </tr>
                        <% i++; }) %>
                            <% } else{ %>
                                <tr>
                                    <td colspan="7">No Data Found</td>
                                </tr>
                                <% } %>
                </tbody>
            </table>
        </div>
    
        <%- include('../partials/footer.ejs') %>
    </body>

</html>